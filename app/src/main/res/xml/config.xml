<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:key="cat_config_app" app:title="Preferencias de la Aplicación ">

        <SwitchPreferenceCompat
            app:key="displayColor"
            app:title="Modo Nocturno"/>

        <ListPreference
            app:key="lanpref"
            app:title="Idioma de la aplicacón"
            app:summary="Cambia el idioma de la aplicación"
            app:dialogTitle="Idioma"
            app:entries="@array/idioma"
            app:entryValues="@array/codIdioma"/>

    </PreferenceCategory>

</PreferenceScreen>